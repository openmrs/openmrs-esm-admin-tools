{
  "name": "@openmrs/admin-tools",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "openmrs develop",
    "start-all": "openmrs develop --sources 'packages/esm-*-app/'",
    "ci:publish": "lerna publish from-package --yes",
    "ci:prepublish": "lerna publish from-package --no-git-reset --yes --dist-tag next",
    "release": "lerna version --no-git-tag-version",
    "verify": "turbo lint typescript test",
    "prettier": "prettier --config prettier.config.js --write \"packages/**/*.{ts,tsx}\" \"e2e/**/*.ts\"",
    "postinstall": "husky install",
    "test-e2e": "playwright test",
    "coverage": "yarn test --coverage",
    "extract-translations": "lerna run extract-translations"
  },
  "devDependencies": {
    "@openmrs/esm-framework": "^5.1.0",
    "@playwright/test": "^1.37.1",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.83",
    "@swc/jest": "^0.2.29",
    "@testing-library/dom": "^8.20.1",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^25.2.3",
    "@types/jsdom": "20.0.1",
    "@types/lodash-es": "^4.17.9",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@types/webpack-env": "^1.18.1",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "concurrently": "^6.5.1",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "dayjs": "^1.11.9",
    "dotenv": "^16.3.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-config-ts-react-important-stuff": "^3.0.0",
    "eslint-plugin-prettier": "^3.4.1",
    "husky": "^8.0.3",
    "i18next": "^19.9.2",
    "i18next-parser": "^3.11.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^28.1.3",
    "jest-cli": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "lerna": "^4.0.0",
    "openmrs": "next",
    "prettier": "^2.8.8",
    "pretty-quick": "^2.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^11.18.6",
    "react-router-dom": "^6.15.0",
    "rxjs": "^6.6.7",
    "sass": "^1.66.1",
    "swc-loader": "^0.2.3",
    "turbo": "^1.10.13",
    "typescript": "^4.9.5",
    "webpack": "^5.88.2",
    "webpack-cli": "^4.10.0"
  },
  "packageManager": "yarn@3.6.3"
}
